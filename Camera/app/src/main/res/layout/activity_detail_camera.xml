<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".View.ProductView.DetailCameraActivity">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="CHI TIẾT MÁY ẢNH"
        android:paddingLeft="8dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:background="@color/pink"
        android:textColor="#ffffff"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:padding="6dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tên máy"
                    android:textColor="@color/pink"/>

                <TextView
                    android:id="@+id/tvCameraName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:maxLength="19" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hãng"
                    android:textColor="@color/pink"/>

                <TextView
                    android:id="@+id/tvMaker"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLength="38"
                    android:text="Số điểm ảnh"
                    android:textColor="@color/pink"/>

                <TextView
                    android:id="@+id/tvMega"
                    android:layout_width="200dp"
                    android:inputType="number"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tinhh trạng"
                    android:textColor="@color/pink"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:maxLength="38"
                    android:text="Giá bán" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="200dp"
                    android:inputType="number"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLength="38"
                    android:textColor="@color/pink"
                    android:text="Phụ kiện" />

                <TextView
                    android:id="@+id/tvAccessories"
                    android:layout_width="200dp"
                    android:textColor="@color/pink"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:maxLength="38"
                    android:textColor="@color/pink"
                    android:text="Mô tả" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:text="Sửa" />
                <Button
                    android:id="@+id/btDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:text="Xóa" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
