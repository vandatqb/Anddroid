<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgListProductId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:padding="5dp"
        android:src="@drawable/img_account" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvListProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgListProductId"
            android:layout_toRightOf="@+id/imgListProductId"
            android:text="Name"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvListProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <TextView
                android:gravity="left"
                android:id="@+id/tvListproductStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id" />
            <TextView
                android:id="@+id/tvListProductId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:visibility="gone"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvListProductTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian" />
    </LinearLayout>



</LinearLayout>
